<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1E4"
    android:padding="1dp">

    <!-- Back Button Icon -->
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/back"
        android:src="@drawable/logo_back" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backIcon"
        android:layout_marginTop="16dp"
        android:text="@string/in_emergency"
        android:layout_marginStart="24dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText1"
        android:layout_marginTop="8dp"
        android:text="Press the SOS button, your live\n location will be shared with the \nnearest help center and your \nemergency contacts"
        android:textColor="#000000"
        android:layout_marginStart="24dp"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <!-- Illustration Image -->
    <ImageView
        android:id="@+id/illustration1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/backIcon"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bully_illustration"
        android:contentDescription="@string/bullyillustration" />

    <!-- SOS Button -->
    <FrameLayout
        android:id="@+id/sosButtonContainer1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subtitleText1"
        android:layout_marginTop="16dp">

        <View
            android:id="@+id/emergency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sos_button_background" />

        <TextView
            android:id="@+id/sosButtonText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SOS\nPress 3 times"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </FrameLayout>

    <!-- Emergency Options -->
    <LinearLayout
        android:id="@+id/emergencyOptionsContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sosButtonContainer1"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <!-- Non-Verbal Button -->
        <Button
            android:id="@+id/btnNonVerbal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/emergency_option_background"
            android:text="@string/non_verbal"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:ignore="ButtonStyle" />

        <!-- Verbal Button -->
        <Button
            android:id="@+id/btnVerbal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/emergency_option_background"
            android:text="@string/verbal"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:ignore="ButtonStyle" />

        <!-- Cyber Bullying Button -->
        <Button
            android:id="@+id/btnCyberBullying1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/emergency_option_background"
            android:text="@string/cyber_bullying"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/emergencyOptionsContainer1"
        android:layout_marginTop="215dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">


        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/home"
                android:src="@drawable/logo_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- News -->
        <LinearLayout
            android:id="@+id/nav_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/news"
                android:src="@drawable/logo_news" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/news"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Center Logo -->

        <!-- Community -->
        <!-- Center Logo -->
        <FrameLayout
            android:id="@+id/nav_logo_container"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- Circular Background -->
            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/logo_circle" />

            <!-- Guardu Logo -->
            <ImageView
                android:id="@+id/nav_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:contentDescription="@string/guardu"
                android:src="@drawable/logo_guardu" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/nav_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/community"
                android:src="@drawable/logo_community" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/community"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Me -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/logo_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/profile"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
